    <div class="border"><hr></div>
    <div class="section-name">STEP <span class="red">BY</span> STEP</div>
    <div class="content">
    <div class="thumb-wrap">
        <% const step = [
            {padding:'pop-up',link: 'Wi2KcdoCuo4', style: 'frame'},
            {padding:'pop-up',link: '8H6dYUgQKB8', style: 'frame frame_pad'},
            {padding:'pop-up',link: 'PZjGrmHdFME',style : 'frame frame_pad'}
        ]; %>
        <% step.forEach((item) => { %>
        <a class="<%= item.padding; %>" data-fancybox href="https://youtu.be/<%= item.link; %>?showinfo=0"><img class="<%= item.style; %>" src="https://img.youtube.com/vi/<%= item.link; %>/maxresdefault.jpg" alt=""></a>
        <% }) %>
    </div>
    </div>
    <div class="load-button"><input class="button" type="button" value="LOAD MORE"></div>
    <div class="section-name">CRAFT <span class="red">EDUCATION</span></div>
   <div class="content">
    <div class="thumb-wrap">
        <% const craft = [
            {padding:'pop-up',link: 'RmNWNLXmswk',style:'frame'},
            {padding:'pop-up',link: '-tztXOz8Vc0',style:'frame frame_pad'},
            {padding:'pop-up',link: 'kUfIVtyydgQ',style:'frame frame_pad'}
        ]; %>
        <% craft.forEach((item) => { %>
        <a class="<%= item.padding; %>" data-fancybox href="https://youtu.be/<%= item.link; %>?showinfo=0"><img class="<%= item.style; %>" src="https://img.youtube.com/vi/<%= item.link; %>/maxresdefault.jpg" alt=""></a>
        <% }) %>
    </div>
    </div>
    <div class="load-button"><input class="button" type="button" value="LOAD MORE"></div>
    <div class="section-name">INSPIRATION</div>
    <div class="content">
    <div class="thumb-wrap">
        <% const inspiration = [
            {padding:'pop-up',link: 'VmmwwzR536g', style: 'frame'},
            {padding:'pop-up',link: '6oPBFnsqJW8', style: 'frame frame_pad'},
            {padding:'pop-up',link: '_wLGr24VeoI',style : 'frame frame_pad'}
        ]; %>
        <% inspiration.forEach((item) => { %>
        <a class="<%= item.padding; %>" data-fancybox href="https://youtu.be/<%= item.link; %>?showinfo=0"><img class="<%= item.style; %>" src="https://img.youtube.com/vi/<%= item.link; %>/maxresdefault.jpg" alt=""></a>
        <% }) %>
    </div>
    <div class="load-button"><input class="button" type="button" value="LOAD MORE"></div>
    </div>
</main>
<footer class="footer">
