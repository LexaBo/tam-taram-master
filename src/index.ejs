    <link rel="stylesheet" href="//cdn.jsdelivr.net/jquery.slick/1.6.0/slick.css"/>
    <link rel="stylesheet" href="css/main.css">
    <link href="https://fonts.googleapis.com/css?family=PT+Sans:400,700" rel="stylesheet">
</head>
<body>
<header class="header">
    <div class="header__top">
        <div class="menu">
            <div class="menu__item"></div>
            <div class="menu__item menu__item_center"></div>
            <div class="menu__item"></div>
        </div>
        <div class="logo header__logo">
            <img class="logo__img" src="img/logo.svg" alt="">
        </div>
    </div>
    <div class="header__bottom">
        <div class="salon-information">
            NEAREST SALON
            <img class="ico mark" src="img/ico_dropdown.svg" alt="">
            <br>
            Plush Salon 92101
        </div>
        <div class="search header__search">
            <img class="ico search__ico" src="img/ico_search.svg" alt="">
        </div>
    </div>
</header>
<nav class="navigation">
        <ul class="navigation__menu">
            <% const menu = ['HAIRCARE', 'COLOR', 'STYLING', 'TEXTURE', 'GET INSPIRED','SOCIAL','NEWS','ABOUT','PROFESSIONAL'] %>
            <% menu.forEach(function(item) { %>
            <li class="navigation__item">
                <a href="#" class="navigation__link"><%= item %></a>
            </li>
            <% }); %>
        </ul>
</nav>
<main class="main">
    <div class="location">
        HOME/<span class="red">VIDEOS</span>
    </div>
    <span class="page-title">VIDEOS</span>
    <div class="title-content">
        <a data-fancybox href="https://www.youtube.com/embed/z8M0Fa1JVco?showinfo=0">
